# Server Configuration
PORT=5000
NODE_ENV=development

# Security
# Generate a 32-character encryption key using: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_KEY=your-32-character-encryption-key-here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=debug

# MongoDB Connection Settings
MAX_QUERY_TIMEOUT=60000
MAX_CONNECTION_TIMEOUT=30000
CONNECTION_POOL_SIZE=10
CLIENT_CACHE_TTL=300000

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_CONNECTION_TEST=10
RATE_LIMIT_QUERY_EXEC=30
RATE_LIMIT_DOCUMENT_CRUD=60

# File Upload
MAX_FILE_SIZE=16777216
